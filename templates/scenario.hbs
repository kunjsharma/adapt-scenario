{{! Maintainers - Kunj B Sharma}}
<div class="scenario-inner component-inner">
    {{> component this}}
    <div class="scenario-widget component-widget">
        <div class="scenario-widget-container">
            <img class="scenario-widget-bg" src="{{_bg}}"/>
            <div class="scenario-item-holder">
                {{! Images }}
                <div class="scenario-item">
                    {{#each _items}}
                        <img src="{{_graphic._src}}" alt="{{_graphic.alt}}" title="{{{_graphic.alt}}}" tabindex="-1" aria-hidden="true"/>
                    {{/each}}
                </div>
                {{! Hotspot highlight images (optional) }}
                <div class="scenario-highlight">
                    {{#each _items}}
                        {{#if _graphic._highlight}}<img src="{{_graphic._highlight}}" alt="" title="" tabindex="-1" aria-hidden="true"/>{{/if}}
                    {{/each}}
                </div>
                {{! Hotspots }}
                <div class="scenario-hotspot">
                    {{#each _hotspots}}
                        <div class="hotspot" style="top:{{_top}};left:{{_left}};width:{{_width}};height:{{_height}}; {{#if _borderRadius}} border-radius: {{_borderRadius}};{{/if}} " tabindex="0" aria-label="{{label}}" role="button"></div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>